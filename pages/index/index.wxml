<!--index.wxml-->
<view class="container">
  <view class="userinfo">
    <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 获取头像昵称 </button>
    

    <block wx:else>
      <image bindtap="playVoice" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    </block>
  </view>
  <view class="usermotto">
    <text class="user-motto">{{motto}}</text>
  </view>
  <view class="Button" bindtap="goLuck"> gogoLuck</view>
  <view class="Button Mimi" bindtouchstart="gomimi" bindtouchend="outmimi"> gomimi</view>
  <audio src="{{srcaud}}" id="myAudio"></audio>
</view>